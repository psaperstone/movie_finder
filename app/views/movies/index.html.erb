<p id="notice"><%= notice %></p>

<h1>My Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Genre</th>
      <!-- <th>Metascore</th>
      <th>Imdbscore</th> -->
      <th>User rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.genre %></td>
        <td><%#= movie.actors %></td>
        <td><%#= movie.metascore %></td>
        <td><%#= movie.imdbscore %></td>
        <td><%= movie.user_rating %></td>
        <td><%= link_to 'Show', movie, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', current_user, class: 'btn btn-success' %>
<%= link_to new_movie_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Movie
  <% end %>
